
<div class="row m-3">
  <div class="col-lg-12">
    <div class="box pb-2">
      <div class="form-inline dark-bg mt-2">
        <select class="form-control mb-2 mr-sm-2 bg-dark text-light" id="player-select">
          <option value="hls" selected>hls.js</option>
          <option value="dash">dash.js</option>
        </select>
        <input type="text" class="form-control mb-2 mr-sm-2 flex-grow-1 text-light bg-dark" id="src-url" placeholder="Manifest URL">
        <button id="play-btn" type="submit" class="btn btn-secondary mb-2 text-light bg-dark">Play</button>
      </div>
    </div>
  </div>
</div>

<div class="row m-3">
  <div class="col-lg-12">
    <div class="box pb-2">
      <div class="video-container" id="video-info" data-player="<%= player %>" data-manifest="<%= manifest %>">
        <video id="video" controls></video>
        <div class="video-overlay">
          <div id="data-source-info">CDN</div>
        </div>
      </div>
    </div>
  </div>
</div>

<script language="javascript" src="dash.all.min.js"></script>
<script language="javascript" src="hls.min.js"></script>
<script language="javascript" src="js/application.js"></script>
